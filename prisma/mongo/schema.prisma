generator client {
  provider = "prisma-client-js"
  output   = "./mongo-client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_MONGO")
}

enum Permission {
  DEFAULT
  READONLY
  SUSPENDED
}

model Profile {
  id                  String     @id @map("_id")
  blocked_users       String[]
  blocked_communities String[]
  avatar              String?
  bio                 String?
  display_name        String
  gender              String?
  location            String?
  permission          Permission @default(DEFAULT)
  saved_posts         String[]
  upvoted_posts       String[]
  downvoted_posts     String[]
}

enum MediaType {
  IMAGE
  VIDEO
  EXTERNAL_LINK
}

type Media {
  mediaType MediaType
  urls      String[]
}

model Post {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  hashtags  String[]
  content   String
  media     Media?
  upvotes   Int
  downvotes Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments_id  String[]
}

type Description {
  title   String
  content String
}

enum Visibility {
  PUBLIC
  RESTRICTED
  PRIVATE
  CACHED
}

type Rule {
  title   String
  content String
}

model Community {
  id           String     @id @default(uuid()) @map("_id")
  name         String
  description  String
  icon         String?
  banner       String?
  visibility   Visibility @default(PUBLIC)
  rules        Rule[]
  pinned_posts String[]
}

model Comment {
  id String @id @map("_id") @default(uuid())

  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  upvotes       Int
  downvotes     Int
  content       String
  parentId      String?
  comments_id String[]
}
