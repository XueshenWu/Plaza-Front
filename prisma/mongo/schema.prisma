generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_MONGO")
}

enum Permission {
  DEFAULT
  READONLY
  SUSPENDED
}

model User {
  id String @id @default(uuid()) @map("_id")

  blocked_users String[]
  blocked_communities String[]
  avatar String?
  bio String?
  display_name String
  gender String?
  location String?
  permission Permission @default(DEFAULT)
  posts String[]
  comments String[]

}

model Post {
  id String @id @default(uuid()) @map("_id")
}

model Community {
  id String @id @default(uuid()) @map("_id")
}
